<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 按下Button时显示对应的图片-->
    <item android:state_pressed="true" android:drawable="@drawable/bgbtn_" />
    <!--焦点在Button上时显示对应图片-->
    <item android:state_focused="true" android:drawable="@drawable/bgbtn_" />
    <!--可用状态即常见状态下显示对应的图片-->
    <item android:state_enabled="true" android:drawable="@drawable/bgbtn" />
    <item android:drawable="@drawable/bgbtn" />
</selector>